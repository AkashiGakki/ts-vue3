    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ."
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-rc.1",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "dayjs": "^1.11.6",
    "vue-demi": "0.13.7"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@use-kit/functions": "^0.0.4",
    "fast-glob": "^3.2.12",
    "vitest": "^0.30.1",
    "vue": "^3.0.0"
  }
}
