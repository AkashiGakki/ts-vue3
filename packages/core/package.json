{
  "name": "@use-composable/core",
  "version": "0.0.4",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx rimraf dist && npm run build:esm && npm run build:cjs",
